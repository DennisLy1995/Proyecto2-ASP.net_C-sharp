
@{
    ViewBag.Title = "vTienda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>Registrar tienda</title>
<link href="~/Content/vRegistrarUsuario.css" rel="stylesheet" />
<link href="~/Content/registrar-tienda.css" rel="stylesheet" />
<script src="~/Scripts/Views/vRegistrarTienda.js"></script>
<script src="~/Scripts/Views/UploadImage.js"></script>

<h2 class="h2-titulo">Registrar tienda</h2>
<div id="form_registrar_block">
    <form id="frmRegistrarTienda">
        <div class="alert alert-dismissible div_hidden" id="show_message">
            <span id="show_message_description"></span>
        </div>

        <div class="form_registrar_float_left">
            <div class="new_input_registrar">
                @Html.CtrlInput(id: "txtCedula", type: "cedula_nacional", label: "Cédula", columnDataName: "Cedula")
            </div>
            <div class="new_input_registrar">
                @Html.CtrlInput(id: "txtNombre", type: "text", label: "Nombre", columnDataName: "Nombre")
            </div>
        </div>

        <div class="form_registrar_float_right">
            <div class="new_input_registrar">
                <div class="form-group">
                    <label>Tipo de cédula</label>
                    <select class="form-control" id="sltTipoCedula">
                        <option value="" selected>--Seleccione una opción</option>
                        <option value="Física">Física</option>
                        <option value="Jurídica">Jurídica</option>
                    </select>
                </div>
                <div class="new_input_registrar">
                    <button type="button" id="btnSeleccionarImagen" class="btn btn-primary">Subir imagen del logo</button>
                </div>
            </div>
        </div>
        <input class="div_hidden" id="txtUrlImagen" type="text" disabled columndataname="UrlLogo" />
    </form>
</div>

<div class="form_registrar_button clearfix">
    @Html.CtrlButton(viewName: "vTienda", id: "btnRegistrar", label: "Registrar tienda", onClickFunction: "ValidarInputs", buttonType: "primary")
</div>
@Html.CtrlButton(viewName: "vTienda", id: "btnAgregar", label: "Agregar usuario", onClickFunction: "AgregarUsuario", buttonType: "primary")


<script src='https://cdn.jsdelivr.net/jquery.cloudinary/1.0.18/jquery.cloudinary.js' type='text/javascript'></script>
<script src="https://widget.cloudinary.com/global/all.js" type="text/javascript"></script>


