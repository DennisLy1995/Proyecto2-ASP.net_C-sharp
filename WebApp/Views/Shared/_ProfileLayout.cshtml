<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link href="~/Content/Others/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Plantilla.css" rel="stylesheet" />
    <link href="~/Content/PlantillaPerfil.css" rel="stylesheet" />

    <script src="~/Scripts/Others/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/Others/bootstrap.min.js"></script>
    <script src="~/Scripts/Others/jquery.dataTables.min.js"></script>
    <link href="~/Content/Others/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/Views/ControlActions.js"></script>
 

</head>
<body>
    <header>
        <div id="opcionesNavegador">
            <span>@Html.ActionLink("Sign in", "vLogin", "Home")</span>
            <span>@Html.ActionLink("Sign up", "vRegistrarUsuario", "Home")</span>

        </div>
        <div id="secondHeader">

            <div id="secondHeader_icons">
                @Html.CtrlHeaderBlock(FONT_AWESOME_TYPE: "home", NOMBRE: "Inicio")
                @Html.CtrlHeaderBlock(FONT_AWESOME_TYPE: "search", NOMBRE: "Buscar")
                <a href="cart.html"><div id="cart_text"><i class="fas fa-shopping-cart"></i> (0 items)</div></a>
            </div>
        </div>

    </header>

    <main>
        <div id="whole_content">
            <div id="profile">
                <div id="profile_information">
                    <div id="profile_picture">
                        <img src="~/Content/imgs/upload_profile_pp.png" alt="" id="perfil_foto_pp">
                        <button type="button" id="btnSeleccionarImagen" class="btn btn-primary" style="margin-left: 5px; margin-right: 5px;">Modificar</button>

                    </div>
                    <div id="profile_user_information">
                        <div>
                            Nombre: <span id="perfil_nombre_completo"> [nombre_completo]</span>
                        </div>
                        <div>
                            Identificación: <span id="perfil_identificacion"> [identificacion]</span>
                        </div>
                        <div>
                            Tipo de cuenta: <span id="perfil_tipo_cuenta"> [tipo_cuenta]</span>
                        </div>
                        <div>
                            Correo electrónico: <span id="perfil_email"> [email_principal]</span>
                        </div>


                    </div>
                </div>

            </div>
            <div id="profile_options">
                <div class="block_icon_style2"><i class="fas fa-box"></i> Mis ordenes</div>
                <div class="block_icon_style2"><i class="fas fa-history"></i> Historial de pagos</div>
                <a href="/Home/vPerfilConfiguracion"><div class="block_icon_style2"><i class="fas fa-cog"></i> Configuración</div></a>
                <div class="block_icon_style2"><i class="fas fa-envelope-open"></i> Soporte</div>
                <div class="block_icon_style2"><i class="fas fa-star"></i> Lista de favoritos</div>
            </div>
            <div id="profile_content">
                @RenderBody()
            </div>
        </div>

    </main>

    <footer></footer>
    <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
    <script src='https://cdn.jsdelivr.net/jquery.cloudinary/1.0.18/jquery.cloudinary.js' type='text/javascript'></script>
    <script src="https://widget.cloudinary.com/global/all.js" type="text/javascript"></script>
    <script src="~/Scripts/Views/UploadImage.js"></script>

</body>
</html>